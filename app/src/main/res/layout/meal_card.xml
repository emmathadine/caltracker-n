<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    app:cardBackgroundColor="#FBFBFB"
    app:cardCornerRadius="8dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginEnd="5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/foodimg"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_margin="15dp"
            android:contentDescription="food image"
            android:scaleType="centerCrop"
            android:foregroundTint="#FF8053"
            android:src="@drawable/ic_food" />

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_gravity="center_vertical"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:layout_weight="0.2"
                android:id="@+id/foodname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hamburgers"
                android:maxLength="20"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/circularst"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/fooddata"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="#9990F9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="B.FAST 0 CAL"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/helveticarb"
                android:textSize="15dp" />

        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>